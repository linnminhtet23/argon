<body>
<% include ../../partials/sidebar %>
<!-- Main content -->
<div class="main-content" id="panel">
  <% include ../../partials/navbar %>
  <div class="header bg-primary pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Examples</h6>
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
              <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item active" aria-current="page">Posts List</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header bg-transparent">
            <h3 class="mb-0">Posts List</h3>
          </div>
          <div class="table-responsive py-4">
            <table class="table table-flush" id="datatable-basic">
              <thead class="thead-light">
              <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Category</th>
                <th>Tags</th>
                <th>Author Name</th>
                <th>Published at</th>
              </tr>
              </thead>
              <tfoot>
              <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Category</th>
                <th>Tags</th>
                <th>Author Name</th>
                <th>Published at</th>
              </tr>
              </tfoot>
              <tbody>
              <% locals.postList && locals.postList.forEach(function(post) { %>
                <tr>
                  <td><%= post.title %></td>
                  <td><%= post.content %></td>
                  <td><%= (post.categories || []).join(', ') %></td>
                  <td>
                    <% post.tags && post.tags.forEach(function(tag) { %>
                        <span class="badge badge-default" style="background-color:<%=tag.color %>"><%=tag.name%></span>
                    <% }) %>
                  </td>
                  <td><%= post.author %></td>
                  <td><%= post.published_at %></td>
                </tr>
              <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- Footer -->
    <% include ../../partials/footer %>
  </div>
</div>
<!-- Include scripts -->
<% include ../../partials/scripts %>
</body>