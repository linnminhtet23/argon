<body>
<% include ../../partials/sidebar %>
<!-- Main content -->
<div class="main-content" id="panel">
  <% include ../../partials/navbar %>
  <div class="header bg-primary pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Examples</h6>
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
              <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item"><a href="#">User List</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit User</li>
              </ol>
            </nav>
          </div>
          <div class="col-lg-6 col-5 text-right">
            <a href="#" class="btn btn-sm btn-neutral">New</a>
            <a href="#" class="btn btn-sm btn-neutral">Filters</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header bg-transparent">
            <div class="row align-items-center">
              <div class="col-8">
                <h3 class="mb-0">User Management</h3>
              </div>
              <div class="col-4 text-right">
                <a href="/user-management" class="btn btn-sm btn-primary">Back to list</a>
              </div>
            </div>
          </div>
          <div class="card-body">
            <form action="/user-management/<%=locals.userData.id%>/edit" method="post" autocomplete="off">
              <h6 class="heading-small text-muted mb-4">User Information</h6>
              <div class="pl-lg-4">
                <div class="form-group">
                  <label for="inputName" class="form-control-label">Name</label>
                  <input type="text" name="name" id="inputName" class="form-control" placeholder="Name" value="<%=locals.userData && locals.userData.name %>">
                  <% if (locals.messages && messages.errors && messages.errors.name) { %>
                    <strong class="invalid-feedback" style="display: block"><%= messages.errors.name %></strong>
                  <% } %>
                </div>
                <div class="form-group">
                  <label for="inputEmail" class="form-control-label">Email</label>
                  <input type="text" name="email" id="inputEmail" class="form-control" placeholder="Email" value="<%=locals.userData && locals.userData.email %>">
                  <% if (locals.messages && messages.errors && messages.errors.email) { %>
                    <strong class="invalid-feedback" style="display: block"><%= messages.errors.email %></strong>
                  <% } %>
                </div>
                <div class="form-group">
                  <label for="inputRole" class="form-control-label">Role</label>
                  <select name="role" id="inputRole" class="form-control">
                    <% locals.userRoles && locals.userRoles.forEach(function(roleObject) { %>
                      <option
                              value="<%=roleObject.role_code%>"
                              <% if((locals.userData && locals.userData.role) === roleObject.role_code) { %>
                                selected
                              <% } %>>
                        <%=roleObject.description%>
                      </option>
                    <% }) %>
                  </select>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-success mt-4">Save</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- Footer -->
    <% include ../../partials/footer %>
  </div>
</div>
<!-- Include scripts -->
<% include ../../partials/scripts %>
</body>