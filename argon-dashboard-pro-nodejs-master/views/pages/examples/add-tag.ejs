<body>
<% include ../../partials/sidebar %>
<!-- Main content -->
<div class="main-content" id="panel">
  <% include ../../partials/navbar %>
  <div class="header bg-primary pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Examples</h6>
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
              <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item"><a href="#">Tag List</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add Tag</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header bg-transparent">
            <div class="row align-items-center">
              <div class="col-8">
                <h3 class="mb-0">Tag Management</h3>
              </div>
              <div class="col-4 text-right">
                <a href="/tag-management" class="btn btn-sm btn-primary">Back to list</a>
              </div>
            </div>
          </div>
          <div class="card-body">
            <% if (locals.messages && messages.success) { %>
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= messages.success %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">Ã—</span>
                </button>
              </div>
            <% } %>
            <form action="/tag-management/add" method="post" autocomplete="off">
              <h6 class="heading-small text-muted mb-4">Add tag</h6>
              <div class="pl-lg-4">
                <div class="form-group">
                  <label for="inputName" class="form-control-label">Name</label>
                  <input type="text" name="name" required id="inputName" class="form-control" placeholder="Name">
                  <% if (locals.messages && messages.errors && messages.errors.name) { %>
                    <strong class="invalid-feedback" style="display: block"><%= messages.errors.name %></strong>
                  <% } %>
                </div>
                <div class="form-group">
                  <label for="color" class="form-control-label">Color</label>
                  <input class="form-control" required name="color" type="color" id="color">
                  <% if (locals.messages && messages.errors && messages.errors.color) { %>
                    <strong class="invalid-feedback" style="display: block"><%= messages.errors.color %></strong>
                  <% } %>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-success mt-4">Save</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- Footer -->
    <% include ../../partials/footer %>
  </div>
</div>
<!-- Include scripts -->
<% include ../../partials/scripts %>
</body>